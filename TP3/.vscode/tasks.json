{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Debug Build",
            "type": "shell",
            "command": "g++ -g --std=c++14 towerGenerator.cpp -o towerGenerator",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher":"$gcc"
        },
        {
            "label": "Release Build",
            "type": "shell",
            "command": "g++ --std=c++14 -O3 towerGenerator.cpp -o towerGenerator",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher":"$gcc"
        }
    ]
}